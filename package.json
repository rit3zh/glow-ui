{
  "name": "glow-ui",
  "version": "1.1.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "build": "tsc",
    "version": "standard-version",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "docs": "typedoc",
    "docs:deploy": "gh-pages -d docs",
    "release": "npm run build && npm run version && npm run docs && npm run docs:deploy && npx release-it --ci --no-github.release && git push --follow-tags origin main"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "standard-version": {
    "skip": {
      "tag": false
    },
    "commitAll": true
  },
  "dependencies": {
    "expo": "~52.0.46",
    "expo-status-bar": "~2.0.1",
    "react": "18.3.1",
    "react-native": "0.76.9"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@types/react": "~18.3.12",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "gh-pages": "^6.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "release-it": "^19.0.1",
    "standard-version": "^9.5.0",
    "typedoc": "^0.28.3",
    "typescript": "^5.3.3"
  },
  "private": true
}
